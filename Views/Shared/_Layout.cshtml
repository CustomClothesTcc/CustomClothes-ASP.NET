<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CustomClothing</title>
    <!--Estilização da pagina-->
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LayoutResponsividade.css" asp-append-version="true" />

    <!--Importação das fontes usadas na pagina-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/CustomClothing.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</head>
<body>
        <header>
            <div class="pesquisa">
<div class="divLogo">
    <div class="divImg">
       <img src="~/lib/Imagens/LogosCC/CustomClothesSemNome.png" alt="Logo" id="logoNavCC"/>
    </div>
    <div class="divP">
        <p>Custom</p>
        <p>Clothes</p>
    </div>
</div>

<div class="autocomplete-container">
                <input id="search-bar" type="search" class="form-control" placeholder="Pesquise a sua Roupa...">
               <button id="search-button">
                <i class="bi bi-search"></i>
               </button>
            </div>
            <!-- Menu Hambúrguer -->
            <button class="menu-btn" onclick="toggleMenu()">
                <i class="bi bi-list"></i>
            </button>
            <div class="menu-hamburguer" id="menuHamburguer">
                <a asp-area="" asp-controller="Login" asp-action="Login">
                    <i class="bi bi-person-circle"></i>
                </a>
                <a asp-area="" asp-controller="#" asp-action="#">
                    <i class="bi bi-heart-fill"></i>
                </a>
                <a asp-area="" asp-controller="#" asp-action="#">
                    <i class="bi bi-cart3"></i> 
                </a>
            </div>

            </div>
            <nav>
                <a asp-area="" asp-controller="Home" asp-action="Index">INÍCIO</a>
                <a asp-area="" asp-controller="Home" asp-action="Sobrenos">SOBRE-NÓS</a>
                <a asp-area="" asp-controller="" asp-action="#">PRODUTOS</a>
                <a asp-area="" asp-controller="Produto" asp-action="Personalizar">PERSONALIZAR</a>
            </nav>
        </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Footer -->
    <footer class="footer-custom footer text-center">
        <div class="container p-4">
            <p>Conheça Nossas Redes Sociais:</p>
            <section class="mb-4 d-flex justify-content-center">
                <a class="btn btn-floating social-btn whatsapp" href="https://api.whatsapp.com/send?phone=5511973072356&text=Ol%C3%A1.%20Seja%20bem%20vindo(a)%20ao%20contato%20da%20Custom%20Clothes.%20Aqui%20voc%C3%AA%20pode%20saber%20mais%20sobre%20nossos%20produtos!">
                    <i class="bi bi-whatsapp"></i>
                </a>
                <a class="btn btn-floating social-btn instagram" href="https://www.instagram.com/custom_clothes10/">
                    <i class="bi bi-instagram"></i>
                </a>
                <a class="btn btn-floating social-btn linkedin" href="https://www.linkedin.com/in/custom-clothes-385171303">
                    <i class="bi bi-linkedin"></i>
                </a>
            </section>
        </div>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2024 Copyright:
            <a class="text-reset fw-bold text-decoration-none">Custom Clothes, todos os direitos reservados.</a>
            <br/>
            <a class="text-reset fw-bold text-decoration-none" href="https://customclothestcc.github.io/DevWorkstation/">Desenvolvido pela Dev Workstation LTDA.</a>
        </div>
    </footer>
    <script src="~/js/site.js"></script>
    <script src="~/js/LayoutJS.js"></script>
    <script src="~/js/sugestoes.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>