@{
    ViewData["Title"] = "Perfil Cliente";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Perfil Cliente</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/PerfilCliente.css" />
</head>
<body>
    <div class="container py-4">
        <!-- Título -->
        <h1 class="text-center mb-4">Perfil Cliente</h1>

        <!-- Área de Perfil -->
        <div class="row align-items-center mb-5">
            <div class="col-md-4 text-center">
                <img src="~/img/TelaPerfil.png"
                     class="img-fluid rounded-circle border"
                     alt="Perfil" />
            </div>
            <div class="col-md-8">
                <form>
                    <label>Nome:</label>
                    <div class="mb-3">
                        <p class="form-control">@ViewBag.Nome</p>
                    </div>
                    <label>CPF:</label>
                    <div class="mb-3">
                        <p class="form-control">@ViewBag.CPF</p>
                    </div>
                    <label>RG:</label>
                    <div class="mb-3">
                        <p class="form-control">@ViewBag.RG</p>
                    </div>
                    <label>Celular:</label>
                    <div class="mb-3">
                        <p class="form-control">@ViewBag.Celular</p>
                    </div>
                    <label>Email:</label>
                    <div class="mb-3">
                        <p class="form-control">@ViewBag.Email</p>
                    </div>
                    <a asp-controller="Home" asp-action="Index" style=" background-color:#1C003F" class="btn btn-primary bg-custom w-100">Voltar para o Inicio</a>
                </form>
            </div>
        </div>


        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>