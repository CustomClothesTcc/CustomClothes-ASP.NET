@model CustomClothing.Models.Personalizar
@{
    ViewData["Title"] = "Personalizar";
}

<div class="container py-5">
    <!-- Título Principal -->
    <h1 class="text-center mb-4">Personalizar a sua aqui:</h1>

    <!-- Formulário Responsivo -->
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <form autocomplete="off" autocomplete="reset" asp-controller="Produto" id="formProduto" asp-action="Personalizar" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <!-- Estampa -->
                    <div class="col-md-6">
                        <label asp-for="Estampa" class="form-label">Estampa:</label>
                        <input asp-for="Estampa" type="file" class="form-control" id="file" name="file" required />
                    </div>

                    <!-- Descrição da Roupa -->
                    <div class="col-md-6">
                        <label asp-for="Descricao" class="form-label">Descrição da Roupa:</label>
                        <input asp-for="Descricao" class="form-control" type="text" id="descricao" required />
                    </div>

                    <!-- Tamanho da Imagem -->
                    <div class="col-md-6">
                        <label asp-for="DescImg" class="form-label">Tamanho da Imagem:</label>
                        <input asp-for="DescImg" class="form-control" type="text" id="Tamanho-1" required />
                    </div>

                    <!-- Tamanho -->
                    <div class="col-md-6">
                        <label asp-for="Tamanho" class="form-label">Tamanho:</label>
                        <input asp-for="Tamanho" class="form-control" type="text" id="tamanho" required />
                    </div>

                    <!-- Tecido -->
                    <div class="col-md-6">
                        <label asp-for="Tecido" class="form-label">Tecido:</label>
                        <select asp-for="Tecido" class="form-select" required>
                            <option value="">Selecione um tecido</option>
                            <option value="ALGODAO">Algodão</option>
                            <option value="POLIESTER">Poliéster</option>
                            <option value="SEDA">Seda</option>
                            <option value="LINHO">Linho</option>
                        </select>
                    </div>

                    <!-- Cor -->
                    <div class="col-md-6">
                        <label asp-for="Cor" class="form-label">Cor:</label>
                        <input asp-for="Cor" class="form-control" type="text" id="tamanho" required />
                    </div>

                    <!-- Quantidade -->
                    <div class="col-md-6">
                        <label asp-for="Quantidade" class="form-label">Quantidade:</label>
                        <input asp-for="Quantidade" class="form-control" type="text" id="tamanho" required />
                    </div>

                    <!-- Valor -->
                    <div class="col-md-6">
                        <label asp-for="Valor" class="form-label">Total:</label>
                        <input asp-for="Valor" class="form-control" type="text" id="Txtotal" required />
                    </div>
                </div>

                <!-- Botão -->
                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-success w-50" onclick="return confirm('Produto para personalizar enviado com sucesso')">Personalizar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/js/personalizar.js"></script>
