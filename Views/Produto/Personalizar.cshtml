@model CustomClothing.Models.Produto
@{
    ViewData["Title"] = "Personalizar";
}
<!--Link do CSS para estilizar a página Personalizar Roupa-->
<link rel="stylesheet" href="~/css/Personalizar.css" />
<!--Título Principal-->
<h1 class="text-center fs-1">Personalizar a sua aqui:</h1>
<!--A div Container vai ser todo o contéudo da Tela de Personalizar-->
<div class="Container">
    <!--A Div Custom vai ser a roupa personalizada conforme o cliente pediu-->
    <div class="Custom">
        <!--Adicionando a Camiseta Personalizada para o usuário ver-->
        <img class="rounded mx-auto d-block" src="~/lib/Imagens/Camiseta.jpg" />
        <!--A Classe Roupa é aonde o usuário irá personalizar a descrição da roupa, tamanho da estampa e tamanho-->
        <form asp-controller="Produto" asp-action="Personalizar" method="post" enctype="multipart/form-data">
            <label asp-for="Descricao">Descrição da Roupa:</label>
            <input asp-for="Descricao" class="descricao" type="text" id="descricao" required />
            <br />
            <label asp-for="DescricaoImg">Tamanho da Imagem:</label>
            <input asp-for="DescricaoImg" class="Roupa" type="text" id="Tamanho-1" required />
            <br />
            <label asp-for="Tamanho">Tamanho:</label>
            <input asp-for="Tamanho" class="Roupa" type="text" id="tamanho" required />
            <br />
            <label asp-for="Cor">Cor:</label>
            <input asp-for="Cor" class="Roupa" type="text" id="tamanho" required />
            <br/>
            <label asp-for="Quantidade">Quantidade:</label>
            <input asp-for="Quantidade" class="Roupa" type="number" id="tamanho" required />
            <br/>
            <label class="Total" asp-for="Valor">Total:</label>
            <input asp-for="Valor" class="Roupa" type="text" id="Txtotal" required />
            <br />
            <!--O Botão Ver utiliza Classes CSS e Boostrap-->
            <input type="submit" value="Ver" class="botão text-white btn d-grid gap-2 col-4 mx-auto" />
        </form>
    </div>
    <div class="Coluna">
        <!---A Classe Picture terá as estampas que o usuário pedir--->

        <label asp-for="Estampa" class="picture" for="picture__input" tabIndex="0">
            <span asp-for="Estampa" class="picture__image"></span>
            <input asp-for="Estampa" type="file" name="picture__input" id="picture__input">
        </label>
        <!--Label Descição é a descrição da estampa-->
        <label asp-for="Descricao">Descrição:</label>
        <input asp-for="Descricao" class="w-90" type="text" id="descricao-2" required />
        <br />
        <label class="labels">Tecido da Roupa:</label>

        <label class="labels">Tamanho:</label>
        <br />
        <!--Opções de Tecido de Roupas para o Usuário escolher-->
        <select>
            <option class="text-center">Algodão</option>
            <option class="text-center">Viscose</option>
            <option class="text-center">Poliéster</option>
            <option class="text-center">Seda</option>
        </select>
        <!--Opções de Tamanho de Roupas para o Usuário escolher-->
        <select>
            <option class="text-center">P</option>
            <option class="text-center">M</option>
            <option class="text-center">G</option>
            <option class="text-center">GG</option>
        </select>
        <br />
        <br />
        <input type="submit" value="Personalizar" class="botão-2 text-white text-center btn d-grid gap-2 col-4 mx-auto" />
    </div>
</div>
<script src="~/js/personalizar.js"></script>