@model CustomClothing.Models.Produto
@{
    ViewData["Title"] = "AdicionarCarrinho";
}

<div class="container py-5">
    <div class="row g-5">
        <!-- Coluna 1: Imagem e Cards -->
        <div class="col-lg-6">
            <!-- Imagem Principal -->
            <div id="zoom" class="text-center mb-4">
                <img src="@Model.Estampa" alt="imagem" id="imgzoom" class="img-fluid rounded shadow">
            </div>

            <!-- Cards -->
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div class="col">
                    <a asp-action="Personalizar" class="text-decoration-none">
                        <div class="card h-100 shadow">
                            <img src="~/Img/Blusa1.jpg" href="Produto/Personalizar" class="card-img-top img-fluid" alt="Personalizar Roupas">
                            <div class="card-body">
                                <h5 class="card-title" style="color: #000; padding: 0.1em">Personalizar Roupas</h5>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="col">
                    <a asp-action="Produto" class="text-decoration-none">
                        <div class="card h-100 shadow">
                            <img src="~/Img/Nike.jpg" href="Produto/Produto" class="card-img-top img-fluid" alt="Ver outros produtos">
                            <div class="card-body">
                                <h5 class="card-title" style="color: #000; padding: 0.1em">Ver outros produtos</h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Coluna 2: Detalhes do Produto -->
        <div class="col-lg-6">
            <h2 class="nomeProd" style="padding: 1em 0 1em 0">@Model.Descricao</h2>
            <h4 class="text-success fw-bold" style="padding: 0.1em 0 0.1em 0">R$ @Model.Valor</h4>
            <hr class="my-4">

            <!-- Cores -->
            <p class="fw-bold">Cores</p>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-dark rounded-circle" id="preto" style="width: 40px; height: 40px; background-color: black;"></button>
                <button class="btn btn-outline-dark rounded-circle" id="vinho" style="width: 40px; height: 40px; background-color: darkred;"></button>
                <button class="btn btn-outline-dark rounded-circle" id="verde" style="width: 40px; height: 40px; background-color: green;"></button>
                <button class="btn btn-outline-dark rounded-circle" id="branco" style="width: 40px; height: 40px; background-color: white;"></button>
            </div>

            <!-- Tamanhos -->
            <p class="fw-bold mt-4">Tamanho</p>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-primary" style="color: #000; border-color: #000; width: 7vw;">@Model.Tamanho</button>
            </div>

            <!-- Quantidade -->
            <p class="fw-bold mt-4">Quantidade</p>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-secondary">-</button>
                <input type="text" class="form-control text-center" style="width: 60px;" value="@Model.Quantidade" disabled />
                <button class="btn btn-outline-secondary">+</button>
            </div>

            <!-- Descrição -->
            <p class="fw-bold mt-4">Descrição</p>
            <textarea class="form-control" id="descricao" rows="3" disabled>@Model.Categoria</textarea>

            <!-- Botão de Compra -->
            <div class="text-center mt-4">
                <button class="btn btn-success w-100" style="background-color: #220F3A; border-radius: 15px;">Comprar</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/teste.js"></script>
