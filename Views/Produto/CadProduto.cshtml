@model CustomClothing.Models.Produto

@{
    ViewData["Title"] = "CadProduto";
}

<div class="container py-5">
    <!-- Título -->
    <h1 class="text-center mb-4">Cadastro de Produto</h1>

    <form asp-action="CadProduto">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Campos do Formulário organizados horizontalmente -->
        <div class="row g-3">
            <!-- Tecido -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Tecido" class="form-label">Tecido</label>
                <input asp-for="Tecido" class="form-control" />
                <span asp-validation-for="Tecido" class="text-danger"></span>
            </div>

            <!-- Descrição -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <!-- Categoria -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Categoria" class="form-label">Categoria</label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <!-- Cor -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Cor" class="form-label">Cor</label>
                <input asp-for="Cor" class="form-control" />
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>

            <!-- Estampa -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Estampa" class="form-label">Estampa</label>
                <input asp-for="Estampa" class="form-control" />
                <span asp-validation-for="Estampa" class="text-danger"></span>
            </div>

            <!-- Quantidade -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Quantidade" class="form-label">Quantidade</label>
                <input asp-for="Quantidade" type="number" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>

            <!-- Tamanho -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Tamanho" class="form-label">Tamanho</label>
                <input asp-for="Tamanho" class="form-control" />
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>

            <!-- Situação -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Situacao" class="form-label">Situação</label>
                <input asp-for="Situacao" class="form-control" />
                <span asp-validation-for="Situacao" class="text-danger"></span>
            </div>

            <!-- Valor -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Valor" class="form-label">Valor</label>
                <input asp-for="Valor" type="text" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>

        <!-- Botão de Submit -->
        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-primary">Criar Produto</button>
        </div>
    </form>

    <!-- Link para voltar -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>
