@model CustomClothing.Models.Produto

@{
    ViewData["Title"] = "CadProduto";
}

<div class="container py-5">
    <link href="~/css/AlertCad.css"/>
    <h1 class="text-center mb-4" style="padding: 0.5vh;">Cadastro de Produto</h1>

    <form asp-action="CadProduto" method="post" enctype="multipart/form-data" class="bg-light p-4 rounded shadow">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Grid Responsivo -->
        <div class="row g-3">
            <!-- Tecido -->
            <div class="col-md-6">
                <label asp-for="Tecido" class="form-label">Tecido</label>
                <select asp-for="Tecido" class="form-select" required>
                    <option value="">Selecione um tecido</option>
                    <option value="ALGODAO">Algodão</option>
                    <option value="POLIESTER">Poliéster</option>
                    <option value="SEDA">Seda</option>
                    <option value="LINHO">Linho</option>
                </select>
                <span asp-validation-for="Tecido" class="text-danger"></span>
            </div>

            <!-- Descrição -->
            <div class="col-md-6">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" required/>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <!-- Categoria -->
            <div class="col-md-6">
                <label asp-for="Categoria" class="form-label">Categoria</label>
                <select asp-for="Categoria" class="form-select" required>
                    <option value="">Selecione uma categoria</option>
                    <option value="Calcados">Calçados</option>
                    <option value="Superior">Superior</option>
                    <option value="Inferior">Inferior</option>
                    <option value="Acessorios">Acessórios</option>
                    <option value="Outros">Outros</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <!-- Cor -->
            <div class="col-md-6">
                <label asp-for="Cor" class="form-label">Cor</label>
                <input asp-for="Cor" class="form-control" required/>
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>

            <!-- Estampa -->
            <div class="col-md-6">
                <label asp-for="Estampa" class="form-label">Estampa</label>
                <input type="file" id="file" name="file" asp-for="Estampa" required class="form-control" />
                <span asp-validation-for="Estampa" class="text-danger"></span>
            </div>

            <!-- Quantidade -->
            <div class="col-md-6">
                <label asp-for="Quantidade" class="form-label">Quantidade</label>
                <input asp-for="Quantidade" class="form-control" required />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>

            <!-- Tamanho -->
            <div class="col-md-6">
                <label asp-for="Tamanho" class="form-label">Tamanho</label>
                <input asp-for="Tamanho" class="form-control" required />
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>

            <!-- Situação -->
            <div class="col-md-6">
                <label asp-for="Situacao" class="form-label">Situação</label>
                <select asp-for="Situacao" class="form-select" required>
                    <option value="">Selecione a situação</option>
                    <option value="Esgotado">Esgotado</option>
                    <option value="Estoque">Estoque</option>
                    <option value="Inativo">Inativo</option>
   
                </select>
                <span asp-validation-for="Situacao" class="text-danger"></span>
            </div>

            <!-- Valor -->
            <div class="col-md-6">
                <label asp-for="Valor" class="form-label">Valor</label>
                <input asp-for="Valor" class="form-control" id="valor" required placeholder="R$0,00" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>

        <!-- Botões -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
            <button type="submit" class="btn btn-primary" id="btnCad">Cadastrar</button>
        </div>

        <script src="~/js/AlertCad.js"></script>
    </form>

</div>
