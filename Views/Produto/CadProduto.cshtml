<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadProduto" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Tecido" class="control-label"></label>
                <input asp-for="Tecido" class="form-control" />
        <!-- Campos do Formulário organizados horizontalmente -->
        <div class="row g-3">
            <!-- Tecido -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Tecido" class="form-label">Tecido</label>
                <select asp-for="Tecido" class="form-select">
                    <option value="" disabled selected>Selecione...</option>
                    <option value="ALGODAO">Algodão</option>
                    <option value="POLIESTER">Poliéster</option>
                    <option value="SEDA">Seda</option>
                    <option value="LINHO">Linho</option>
                </select>
                <span asp-validation-for="Tecido" class="text-danger"></span>
            </div>

            <!-- Descrição -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Descricao" class="form-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <!-- Categoria -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Categoria" class="form-label">Categoria</label>
                <select asp-for="Categoria" class="form-select">
                    <option value="" disabled selected>Selecione...</option>
                    <option value="Calcados">Calçados</option>
                    <option value="Superior">Superior</option>
                    <option value="Inferior">Inferior</option>
                    <option value="Acessorios">Acessórios</option>
                    <option value="Outros">Outros</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>

            <!-- Cor -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Cor" class="form-label">Cor</label>
                <input asp-for="Cor" class="form-control" />
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estampa" class="control-label"></label>
                <input type="file" id="file" name="file" asp-for="Estampa" class="form-control" />

            <!-- Estampa -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Estampa" class="form-label">Estampa</label>
                <input asp-for="Estampa" class="form-control" />
                <span asp-validation-for="Estampa" class="text-danger"></span>
            </div>

            <!-- Quantidade -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Quantidade" class="form-label">Quantidade</label>
                <input asp-for="Quantidade" type="number" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>

            <!-- Tamanho -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Tamanho" class="form-label">Tamanho</label>
                <input asp-for="Tamanho" class="form-control" />
                <span asp-validation-for="Tamanho" class="text-danger"></span>
            </div>

            <!-- Situação -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Situacao" class="form-label">Situação</label>
                <select asp-for="Situacao" class="form-select">
                    <option value="" disabled selected>Selecione...</option>
                    <option value="Esgotado">Esgotado</option>
                    <option value="Estoque">Em Estoque</option>
                    <option value="Inativo">Inativo</option>
                </select>
                <span asp-validation-for="Situacao" class="text-danger"></span>
            </div>

            <!-- Valor -->
            <div class="col-md-6 col-lg-4">
                <label asp-for="Valor" class="form-label">Valor</label>
                <input asp-for="Valor" type="text" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>

        <!-- Botão de Submit -->
        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-primary">Criar Produto</button>
        </div>
    </form>

    <!-- Link para voltar -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
    </div>
</div>
